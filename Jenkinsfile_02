#!groovy

pipeline {
    environment {
        JAVA_TOOL_OPTIONS = "-Duser.home=/var/maven"
    }
    agent {
        docker {
            image "maven:3.6.0-jdk-13"
            label "docker-slave"
            args "-v /tmp/maven:/var/maven/.m2"
           // args "-v /tmp/maven:/var/maven/.m2 -e MAVEN_CONFIG=/var/maven/.m2"
        }
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean package"
            }
        }
    }

    stages {
        stage("artifact creation") {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', excludes: 'target/*.txt'
            }
        }
    }


    post {
        always {
            cleanWs()
        }
    }
}